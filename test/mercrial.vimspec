Describe Mercurial backend
  Before all
    let path = TempDir()
    let hg_dir = Join(path, '.hg')
  End

  After all
    call RemoveAll(path)
  End

  Before each
    let hash = SHA1()
    call mkdir(hg_dir, 'p')
    edit `=Join(path, 'a.txt')`
  End

  After each
    bwipe!
    call RemoveAll(hg_dir)
  End

  It detects repository
    Assert Equals(vcs_info#get(),
    \             {
    \               'vcs':    'mercurial',
    \               'root':   path,
    \               'dir':    hg_dir,
    \               'head':   'default',
    \               'action': '',
    \             })
  End

  It detects that it is activated bookmark
    call writefile(['@'], Join(hg_dir, 'bookmarks.current'))
    Assert Equals(vcs_info#get(),
    \             {
    \               'vcs':    'mercurial',
    \               'root':   path,
    \               'dir':    hg_dir,
    \               'head':   'default',
    \               'action': '',
    \             })

    call writefile(['master'], Join(hg_dir, 'bookmarks.current'))
    Assert Equals(vcs_info#get(),
    \             {
    \               'vcs':    'mercurial',
    \               'root':   path,
    \               'dir':    hg_dir,
    \               'head':   'master',
    \               'action': '',
    \             })
  End

  It detects that it is checked out stable branch
    call writefile(['stable'], Join(hg_dir, 'branch'))
    Assert Equals(vcs_info#get(),
    \             {
    \               'vcs':    'mercurial',
    \               'root':   path,
    \               'dir':    hg_dir,
    \               'head':   'stable',
    \               'action': '',
    \             })
  End

  It detects that it is doing 'merge'
    call mkdir(Join(hg_dir, 'merge'))
    Assert Equals(vcs_info#get(),
    \             {
    \               'vcs':    'mercurial',
    \               'root':   path,
    \               'dir':    hg_dir,
    \               'head':   'default',
    \               'action': 'merge',
    \             })
  End

  It detects that it is doing 'rebase'
    call writefile([], Join(hg_dir, 'rebasestate'))
    Assert Equals(vcs_info#get(),
    \             {
    \               'vcs':    'mercurial',
    \               'root':   path,
    \               'dir':    hg_dir,
    \               'head':   'default',
    \               'action': 'rebase',
    \             })
  End
End
