Describe CVS backend
  Before all
    let path = TempDir()
    let cvs_dir = Join(path, 'CVS')

    call mkdir(cvs_dir, 'p')
    call writefile([], Join(cvs_dir, 'Repository'))
    edit `=Join(path, 'a.txt')`
  End

  After all
    bwipe!
    call RemoveAll(path)
  End

  It detects repository
    call writefile(['project'], Join(cvs_dir, 'Repository'))
    Assert Equals(vcs_info#get(),
    \             {
    \               'vcs':    'cvs',
    \               'root':   path,
    \               'dir':    cvs_dir,
    \               'head':   'project',
    \               'action': '',
    \             })
  End

  It detects that it is checked out subset of module
    call writefile(['project/dir'], Join(cvs_dir, 'Repository'))
    Assert Equals(vcs_info#get(),
    \             {
    \               'vcs':    'cvs',
    \               'root':   path,
    \               'dir':    cvs_dir,
    \               'head':   'project/dir',
    \               'action': '',
    \             })
  End
End
